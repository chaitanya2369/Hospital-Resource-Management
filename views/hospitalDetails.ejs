<html>
    <head>
      <title>Recommended Hospitals</title>
      <link href="/css/styles7.css" rel="stylesheet">
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
      <link href="https://fonts.googleapis.com/css2?family=Alkatra:wght@400;600&family=Barlow+Condensed:wght@300&family=Fira+Sans:wght@300&family=Inter&family=Lato&family=Manrope:wght@500&family=Montserrat&family=Nunito+Sans&family=Open+Sans&family=PT+Sans&family=Poppins&family=Public+Sans:wght@300&family=Rancho&family=Roboto:wght@300&family=Rubik:wght@300&family=Sacramento&family=Ysabeau:wght@400;500&display=swap" rel="stylesheet">
    </head>
    <body>
      <header>
        <div class="header-container">
            <div class="header-logo">
                <a href="/">
                    <img src="/images/logo.jpg" alt="Error">
                </a>
            </div>
            <div class="header-search">
                <form action="/search-location" method="post">
                    <div class="search-container">
                        <input type="text" name="location" placeholder="Location" required>
                        <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                    </div>
                </form>
                <form action="/search-resources" method="post">
                    <div class="search-container">
                        <input type="text" name="resource" placeholder="Resource" required>
                        <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="login-btn">
                <% if (locals.user) {%>
                <div class="login-div">
                    <a href="/users/profile"><%= user.name %></a> /
                    <a href="/users/sign-out">Sign Out</a>
                </div>
                <%}else{%>
                <div class="login-div">
                    <a href="/users/sign-in">Sign-in</a> /
                    <a href="/users/sign-up">Sign-up</a>
                </div>
                <%}%>
            </div>
        </div>
    </header>
      <div class="second">
        <div class="hospital-profile">
          <h2><%= hospital_datas.hospitalName %></h2>
          <p><i class="fa fa-location-dot" style="color: rgb(128, 23, 87);"></i> <%= hospital_datas.address %></p>
          <div class="star-rating">
            <span class="rating-num"><%=  hospital_datas.rating %></span>
            <i style="font-size: 35px;" data-star="<%=  hospital_datas.rating %>"></i>                             
        </div>
          <button class="button"><i class="fa fa-phone"></i> <%= hospital_datas.mobile %></button>
          <button class="button_1" onclick="window.location.href='//book-a-bed.com'">Book a Bed Now</button>
          <button class="button_2" onclick="window.open('https://maps.google.com/maps?q=<%= encodeURIComponent(hospital_datas.address) %>', '_blank');">
            <i class="fa fa-directions" style="color: black; padding: 0; margin: 0;"></i>Directions to Hospital
          </button>
        </div>
      </div>
      <div class="third">
        <div class="cat1">
          <h2>Services</h2>
          <ul>
            <% for (let i = 0; i < hospital_datas.services.length; i++) { %>
              <li><i class="fa fa-check-circle" style="color: rgb(38, 14, 110); font-size: 20px;"></i>  <%= hospital_datas.services[i]%></li>
              <% } %>
            </ul>
          </div>
          <div class="cat2">
          <h2>Treatment</h2>
          <ul>
            <% for (let i = 0; i < hospital_datas.resource.length; i++) { %>
              <li><i class="fa fa-check-circle" style="color:rgb(38, 14, 110); font-size: 20px;"></i> <%= hospital_datas.resource[i]%></li>
              <% } %>
          </ul>
        </div>
      </div>
    </body>
    </html>
    