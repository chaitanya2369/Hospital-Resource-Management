<!DOCTYPE html>
<html>
<head>
	<title>Nearest Hospitals with Specialists</title>
<link href="/css/styles6.css" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
	<header>
        <div class="header-container">
            <div class="header-logo">
                <a href="/">
                    <img src="/images/logo.jpg" alt="Error">
                </a>
            </div>
            <div class="header-search">
                <form action="/search-location" method="post">
                    <div class="search-container">
                        <input type="text" name="location" placeholder="Location" required>
                        <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                    </div>
                </form>
                <form action="/search-resources" method="post">
                    <div class="search-container">
                        <input type="text" name="resource" placeholder="Resource" required>
                        <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="login-btn">
                <% if (locals.user) {%>
                <div class="login-div">
                    <a href="/users/profile"><%= user.name %></a> /
                    <a href="/users/sign-out">Sign Out</a>
                </div>
                <%}else{%>
                <div class="login-div">
                    <a href="/users/sign-in">Sign-in</a> /
                    <a href="/users/sign-up">Sign-up</a>
                </div>
                <%}%>
            </div>
        </div>
    </header>

	<h2 class="second_text">Most searched Resources:</h2>
	<table>
<tr>
	<td class="b1"style="padding-top:18px" ><button class="button1" onclick="searchHospitals('ophthalmology')">Ophthalmology</button>
	<img class="image1" src="images/eye.png" alt="eye-img">
	</td>
	<td class="b2" ><button class="button2" onclick="searchHospitals('oncology')">Oncologists</button>
	<img class="image2" src="images/oncology.png"  alt="onco-img">
	</td>
	<td class="b1" ><button class="button1" onclick="searchHospitals('dermatology')">Dermatologists</button>
	<img class="image3" src="images/dermetology.png"  alt="derma-img">
	</td>
</tr>
<tr>
	<td class="b2" ><button  class="button2" onclick="searchHospitals('pediatricians')">Pediatricians</button>
	<img class="image4" src="images/pediatrics.png" alt="pediatrics-img">
	</td>
	<td class="b1" ><button  class="button1" onclick="searchHospitals('neuro')">Neurologist</button>
	<img class="image5" src="images/brain.png" alt="neuro-img">
	</td>
	<td class="b2" ><button  class="button2" onclick="searchHospitals('orthopedic')">Orthopedic surgeon</button>
	<img class="image6" src="images/orthopedic.png" alt="orthopedic-img">
	</td>
</tr>
<tr>
	<td class="b1" ><button  class="button1" onclick="searchHospitals('cardio')">Cardiologists</button>
	<img class="image7" src="images/cardiology.png" alt="cardio-img">
	</td>
	<td class="b2" ><button class="button2" onclick="searchHospitals('gynecology')">Gynecologist</button>
	<img class="image8" src="images/gyno.png" alt="gyno-img">
	</td>
	<td class="b1" ><button  class="button1" onclick="searchHospitals('gastroenterology')">Gastroenterologist</button>
	<img class="image9" src="images/gastroenterology.png" alt="gastro-img">
	</td>
</tr>
</table>
<script>
	
	function searchHospitals(resource){
		window.location.href = `/search-resource?resource=${resource}`;
	}
 </script>
	
</body>
</html>
